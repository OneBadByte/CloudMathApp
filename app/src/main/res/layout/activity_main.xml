<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#4c4c4c">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Please select a button"
        android:id="@+id/totalTextView"
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30dp"
        android:textColor="#0084ff"
        android:background="#000000"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="OHM"
        android:id="@+id/ohmButton"
        android:layout_below="@+id/totalTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="2dp"
        android:background="#00b2ff" />

    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Watts"
        android:id="@+id/wattButton"
        android:layout_alignTop="@+id/ohmButton"
        android:layout_toRightOf="@+id/ohmButton"
        android:layout_toEndOf="@+id/ohmButton"
        android:background="#00b2ff" />

    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Amps"
        android:id="@+id/ampButton"
        android:layout_alignTop="@+id/wattButton"
        android:layout_toRightOf="@+id/wattButton"
        android:layout_toEndOf="@+id/wattButton"
        android:background="#00b2ff" />

    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Volts"
        android:id="@+id/voltButton"
        android:layout_alignTop="@+id/ampButton"
        android:layout_toRightOf="@+id/ampButton"
        android:layout_toEndOf="@+id/ampButton"
        android:background="#00b2ff" />
    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Info"
        android:id="@+id/infoButton"
        android:layout_alignBottom="@+id/voltButton"
        android:layout_toRightOf="@+id/voltButton"
        android:layout_toEndOf="@+id/voltButton"
        android:background="#00b2ff" />

    <fragment
        android:layout_width="fill_parent"
        android:layout_height="350dp"
        android:name="com.example.blackdartq.cloudmath.DefaultFragment"
        android:id="@+id/defaultFragmentlayout"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ohmButton" />

