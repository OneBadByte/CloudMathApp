<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Please select a button"
        android:id="@+id/totalTextView"
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30dp"
        android:textColor="#0084ff"
        android:background="#000000"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="OHM"
        android:id="@+id/ohmButton"
        android:layout_below="@+id/totalTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="2dp"
        android:background="#00b2ff" />

    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Watts"
        android:id="@+id/wattButton"
        android:layout_alignTop="@+id/ohmButton"
        android:layout_toRightOf="@+id/ohmButton"
        android:layout_toEndOf="@+id/ohmButton"
        android:background="#00b2ff" />

    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Amps"
        android:id="@+id/ampButton"
        android:layout_alignTop="@+id/wattButton"
        android:layout_toRightOf="@+id/wattButton"
        android:layout_toEndOf="@+id/wattButton"
        android:background="#00b2ff" />

    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Volts"
        android:id="@+id/voltButton"
        android:layout_alignTop="@+id/ampButton"
        android:layout_toRightOf="@+id/ampButton"
        android:layout_toEndOf="@+id/ampButton"
        android:background="#00b2ff" />
    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Info"
        android:id="@+id/infoButton"
        android:layout_alignBottom="@+id/voltButton"
        android:layout_toRightOf="@+id/voltButton"
        android:layout_toEndOf="@+id/voltButton"
        android:background="#00b2ff" />


</RelativeLayout>